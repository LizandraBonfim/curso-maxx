package velocidadedeveiculo;
import javax.swing.JOptionPane;
/**
 *
 * @author logon
 */
public class Velocidadedeveiculo {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        
        float S = Float.parseFloat( JOptionPane.showInputDialog("Digite o espaço percorrido em KM: "));
        float T = Float.parseFloat( JOptionPane.showInputDialog("Digite o espaço percorrido em horas: "));
        
        if (S > 0 && T > 0){
            
            float V = S/T;
            JOptionPane.showMessageDialog(null, "A velocidade do veiculo é de " + V + "KM/h");
        }
        else{
            JOptionPane.showMessageDialog(null, "Digite valores positivos para calculo de espaço e tempo! " );

    }
        
    }
    
}
